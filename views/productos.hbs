<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catálogo de Productos</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-amber-50 p-8">
    <div class="container mx-auto">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-orange-500 to-amber-600 text-white p-4 flex items-center justify-between">
                <h2 class="text-2xl font-bold">Catálogo de Productos</h2>
                <div class="flex items-center space-x-2">
                    <input 
                        type="text" 
                        id="searchInput" 
                        placeholder="Buscar productos..." 
                        class="px-4 py-2 rounded-md border focus:outline-none focus:ring-2 focus:ring-orange-300 text-gray-800 w-64"
                        oninput="filtrarProductos()"
                    >
                    <button class="bg-amber-400 hover:bg-amber-500 p-2 rounded-md shadow-md transition-all">
                        <i class="fas fa-search text-white"></i>
                    </button>
                </div>
            </div>

            <!-- Table -->
            <div class="p-4 overflow-x-auto">
                <table class="min-w-full border-collapse" id="productosTabla">
                    <!-- Table Header -->
                    <thead>
                        <tr class="bg-amber-100 text-orange-800 text-sm uppercase tracking-wide font-semibold">
                            <th class="p-4 text-left">Producto</th>
                            <th class="p-4 text-left">Precio</th>
                            <th class="p-4 text-left">Cantidad</th>
                            <th class="p-4 text-center">Acción</th>
                        </tr>
                    </thead>
                    <!-- Table Body -->
                    <tbody class="divide-y divide-amber-200">
                        <tr class="hover:bg-orange-50 transition-all">
                            <td class="p-4 flex items-center space-x-4">
                                <div class="w-16 h-16 bg-gray-200 rounded-md overflow-hidden">
                                    <img 
                                        src="producto1.jpg" 
                                        alt="Producto 1" 
                                        class="w-full h-full object-cover"
                                    >
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-800">Producto 1</p>
                                    <p class="text-sm text-gray-600">Descripción del producto 1</p>
                                </div>
                            </td>
                            <td class="p-4 text-orange-600 font-bold">$20</td>
                            <td class="p-4">
                                <input 
                                    type="number" 
                                    name="cantidad" 
                                    min="1" 
                                    value="1" 
                                    class="w-20 p-2 border rounded-md text-center focus:outline-none focus:ring focus:ring-orange-200"
                                >
                            </td>
                            <td class="p-4 text-center">
                                <form action="/carrito/agregar" method="POST" class="inline-block">
                                    <button 
                                        type="submit" 
                                        class="bg-orange-600 text-white px-4 py-2 rounded-md shadow hover:bg-orange-700 transition-all flex items-center space-x-2"
                                    >
                                        <i class="fas fa-shopping-cart"></i>
                                        <span>Agregar</span>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <tr class="hover:bg-orange-50 transition-all">
                            <td class="p-4 flex items-center space-x-4">
                                <div class="w-16 h-16 bg-gray-200 rounded-md overflow-hidden">
                                    <img 
                                        src="producto2.jpg" 
                                        alt="Producto 2" 
                                        class="w-full h-full object-cover"
                                    >
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-800">Producto 2</p>
                                    <p class="text-sm text-gray-600">Descripción del producto 2</p>
                                </div>
                            </td>
                            <td class="p-4 text-orange-600 font-bold">$30</td>
                            <td class="p-4">
                                <input 
                                    type="number" 
                                    name="cantidad" 
                                    min="1" 
                                    value="1" 
                                    class="w-20 p-2 border rounded-md text-center focus:outline-none focus:ring focus:ring-orange-200"
                                >
                            </td>
                            <td class="p-4 text-center">
                                <form action="/carrito/agregar" method="POST" class="inline-block">
                                    <button 
                                        type="submit" 
                                        class="bg-orange-600 text-white px-4 py-2 rounded-md shadow hover:bg-orange-700 transition-all flex items-center space-x-2"
                                    >
                                        <i class="fas fa-shopping-cart"></i>
                                        <span>Agregar</span>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <!-- Más productos aquí -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        function filtrarProductos() {
            const input = document.getElementById("searchInput").value.toLowerCase();
            const table = document.getElementById("productosTabla");
            const rows = table.getElementsByTagName("tbody")[0].getElementsByTagName("tr");

            for (let row of rows) {
                const producto = row.getElementsByTagName("td")[0].innerText.toLowerCase();
                if (producto.includes(input)) {
                    row.style.display = ""; // Mostrar fila
                } else {
                    row.style.display = "none"; // Ocultar fila
                }
            }
        }
    </script>
</body>
</html>
